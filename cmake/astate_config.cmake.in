# astate_config.cmake - Configuration file for Astate library
# This file is generated by CMake and should not be edited manually

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find dependencies
find_dependency(gflags REQUIRED)
find_dependency(glog REQUIRED)
find_dependency(CUDAToolkit REQUIRED)
find_dependency(Python3 REQUIRED COMPONENTS Interpreter Development)

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/astate_targets.cmake")

# Set package variables
set(ASTATE_VERSION "@PROJECT_VERSION@")
set(ASTATE_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@")
set(ASTATE_VERSION_MINOR "@PROJECT_VERSION_MINOR@")
set(ASTATE_VERSION_PATCH "@PROJECT_VERSION_PATCH@")

# Set include directories
set(ASTATE_INCLUDE_DIRS "@PACKAGE_INSTALL_PREFIX@/include")

# Set library directories
set(ASTATE_LIBRARY_DIRS "@PACKAGE_INSTALL_PREFIX@/lib")

# Check if all required components are available
set(ASTATE_FOUND TRUE)

# Print configuration information
if(ASTATE_FOUND)
    message(STATUS "Found Astate ${ASTATE_VERSION}")
    message(STATUS "  Include directories: ${ASTATE_INCLUDE_DIRS}")
    message(STATUS "  Library directories: ${ASTATE_LIBRARY_DIRS}")
endif()

check_required_components(Astate)